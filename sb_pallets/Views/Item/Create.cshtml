@model sb_pallets.Models.Item_Detail

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Item_Detail</legend>

        <div>Item ID : @ViewBag.itemId</div>

        <div class="editor-label">
            @Html.LabelFor(model => model.item_description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.item_description)
            @Html.ValidationMessageFor(model => model.item_description)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
