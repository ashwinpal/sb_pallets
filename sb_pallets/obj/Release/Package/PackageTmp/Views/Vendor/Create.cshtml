@model sb_pallets.Models.Vendor_Detail

@{
    ViewBag.Title = "Create";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
<link rel="stylesheet" href="@Url.Content("~/Content/Site.css")">
    @* google fonts *@
<link href='https://fonts.googleapis.com/css?family=Roboto:400,700,500' rel='stylesheet' type='text/css'>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<div class="col-md-12" id="nav">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Sb Pallets</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                <ul class="nav nav-pills pull-right">
                    <li role="presentation">@Html.ActionLink("Purchase Order", "Create", "Purchase")</li>
                    <li role="presentation">@Html.ActionLink("Item List", "Create", "Item")</li>
                    <li role="presentation" class="active">@Html.ActionLink("Vendor List", "Create", "Vendor")</li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12" id="body">
            <div id="name">
                <h2>Dashboard</h2>
            </div>@*end name*@

            <h2 class="po">Create Vendor List</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

    <fieldset>
        @*<legend>Vendor_Detail</legend>*@

        <div class="col-md-12 row">
            <div class="itemid">Vendor ID : @ViewBag.vendorId</div>

            <div class="editor-label">
                @Html.LabelFor(model => model.vendor_address)
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(model => model.vendor_address)<br/>
                @Html.EditorFor(model => model.vendor_address)
            </div>

            <p>
                <button type="submit" class="btn btn-primary pull-left">Create</button>
            </p>
        </div> @*  end row  *@
    </fieldset>
            }

        </div> @*end body*@
    </div> @*  end row  *@
</div> @*end container*@


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
